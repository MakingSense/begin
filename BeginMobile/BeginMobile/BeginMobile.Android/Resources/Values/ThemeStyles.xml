<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="BeginMobileTheme" parent="@android:style/Theme.Holo.Light">
      <item name="android:actionBarTabBarStyle">@style/ActionBarTabBar</item>
      <item name="android:actionBarTabStyle">@style/ActionBarTab</item>
      <item name="android:actionBarStyle">@style/BeginMobileActionBar</item>
      <!--<item name="android:actionBarTabTextStyle">@style/ActionBarTabText</item>-->
    </style>
    
    <style name="BeginMobileActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#43BB88</item>
        <item name="android:titleTextStyle">@style/BeginMobileTitle</item>
    </style>
  
    <style name="BeginMobileTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
      <item name="android:textColor">#ffffff</item>
      <item name="android:textStyle">bold</item>
      <item name="android:gravity">center</item>
    </style>
    
    <style name="ActionBarTabBar" parent="@android:style/Widget.Holo.ActionBar.TabBar">
      <item name="android:paddingLeft">0dp</item>
      <item name="android:paddingRight">0dp</item>
      <item name="android:dividerPadding">0dp</item>
      <item name="android:background">#ffffff</item>
      <item name="android:showDividers">none</item>
    </style>
    
    <style name="ActionBarTab" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:measureWithLargestChild">true</item>
        <item name="android:background">@drawable/tab_main_selector</item>
        <!--<item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:maxWidth">15dp</item>-->
    </style>
      
    <!--<style name="ActionBarTabText"
            parent="@android:style/Widget.Holo.ActionBar.TabText">
      <item name="android:textColor">#FFFFFF</item>
      <item name="android:textSize">8dp</item>
      <item name="android:textAllCaps">false</item>
    </style>-->

</resources>

